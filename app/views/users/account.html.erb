<%= form_tag(login_path) do %>
    <p><label for="user_name">Username: </label><input type="text" placeholder=" Username"name="user[user_name]"/></p>
    <p><label for="password">Password: </label><input type="password" placeholder=" Password"name="user[password]"/></p>
  <div><%= submit_tag 'Login' %></div>
<% end -%>

<hr>

<%= form_for @user do |f| %>
  Username <%= f.text_field :user_name %><br>
  Password <%= f.password_field :password %><br>
          <%= f.submit %>
<% end %>


